mainCol = #242424
darkCol = darken(mainCol, 10%)
lightCol = lighten(mainCol, 10%)
maneCol = #0F546C
maneDarkCol = darken(maneCol, 10%)
maneLightCol = lighten(maneCol, 10%)
lighten = #FFFFFF11
lighten2 = #FFFFFF22
darken = #00000011
magicCol = #10DC0D
textCol = white


/****************************************************\
|*                   MAIN STYLE                     *|
\****************************************************/
html, body
  background mainCol
  color textCol
  width 100%
  height 100%
  margin 0

// Content
.content
  display flex
  flex-wrap wrap
  margin auto
  margin-top 2vw
  margin-bottom 52px

  & > .bg
    width 100%
    height 100%
    top 0
    left 0
    margin auto
    background url("../img/horn.svg") no-repeat center
    background-size auto 80%
    opacity 0.2
    position fixed
    -webkit-filter: drop-shadow(0 0 5px  magicCol)
    -webkit-animation Pulse 3s infinite ease-in-out

    @-webkit-keyframes Pulse {
      0% {
        -webkit-filter: drop-shadow(0 0 5px  magicCol)
      }
      50% {
        -webkit-filter: drop-shadow(0 0 20px magicCol)
      }
      100% {
        -webkit-filter: drop-shadow(0 0 5px  magicCol)
      }
    }

// Image
.image-container
  width 50vw
  height 50vw
  text-align center
  z-index 1

.image
  width 50vw - 2px
  height 50vw - 2px
  object-fit cover
  -webkit-animation Load 0.5s infinite ease-in-out

  @-webkit-keyframes Load {
    0%   { background:  transparent; }
    50%  { background: lighten; }
    100% { background:  transparent; }
  }

// Navigation
.navigation
  height 50px
  width 100%
  bottom 0
  left 0
  right 0
  margin 0
  position fixed
  display flex
  background maneCol
  z-index 100

  & > .button
    width 50px
    background transparent
    border none
    color textCol

    &:active
      background lighten

    &:focus
      outline none

// Input divs
div.input
  width 100%
  height 30px
  margin 5px
  padding 5px
  border-radius 5px
  border-color maneDarkCol
  border-width 2px
  background lighten
  color textCol
  display flex
  vertical-align center
  horiz-align center

  &:focus-within
    background lighten2

// Search bar
input.search
  height 100%
  width 100%
  margin auto
  padding-left 5px !important
  font-size 1em
  background transparent
  border none
  color textCol
  -webkit-appearance: none;
  -moz-appearance: none;

  &:focus
    outline none

button.search
  background lighten2
  border-radius 50%
  border none
  color textCol

// Fullscreen
.fullscreen
  visibility collapse
  display none

  &.enabled
    visibility visible
    display block
    position fixed
    left 0
    top 0
    width 100%
    height 100%
    margin 0
    padding 0
    background mainCol
    z-index 900

  & > #fullscreenImg
    position absolute
    text-align center
    left 0
    top 0
    width 100%
    height 100%
    margin 0
    margin-bottom 50px
    padding 0
    z-index 1000

    & > .full-image
      width 100%
      height auto
      margin-top auto
      margin-bottom auto
      object-position 50% 50%
      object-fit contain

  & > .navigation
    z-index 1100

// Sidebar
.sidebar
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  background lightCol
  display none
  visibility collapse
  z-index 1200

  &.enabled
    display block
    visibility visible